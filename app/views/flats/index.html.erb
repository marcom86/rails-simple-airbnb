<%= render "navbar" %>

<div class="container">

  <div class="title">
    <h1>All our Flats (<%= @flats.count %>)</h1>
  </div>

  <div class="flats row">

  <% @flats.each do |flat| %>
    <div class="flat col-4">
      <div class="flat-details">
        <h3> <%= flat.name %> </h3>
        <p> <%= flat.address %> </p>

        <div class="flex">
          <div class="flex">
            <i class="fas fa-users"></i>
            <%= flat.number_of_guests %>
          </div>
          <div class="flex ml-3">
            <i class="fas fa-euro-sign"></i>
            <%= flat.price_per_night %>
          </div>
        </div>

      </div>
      <div class="flat-actions">
        <%= link_to 'More info', flat_path(flat) %>
      </div>
    </div>
  <% end %>

  </div>

</div>
