<%= render "navbar" %>

<div class="banner"></div>

<div class="container margin-top-negative flex">
  <div class="row">
    <div class="col-8">
      <div class="details">
        <div class="title-flat">
          <h1><%= @flat.name %></h1>
          <p class="flat-show-address"><%= @flat.address %></p>
        </div>
        <div class="description-flat">
          <h3>A bit more about this flat...</h3>
          <p><%= @flat.description %></p>
        </div>
        <div class="map"></div>
      </div>
    </div>

    <div class="col-4">
      <div class="booking-flat">
        <form>
          <div class="form-group">
            <label class="sr-only" for="inlineFormInputGroup">12/12/2020</label>
            <div class="input-group mb-2">
              <div class="input-group-prepend">
                <div class="input-group-text">From</div>
              </div>
              <input type="text" class="form-control" id="inlineFormInputGroup" placeholder="12/12/2020">
            </div>
          </div>
          <div class="form-group">
            <label class="sr-only" for="inlineFormInputGroup">07/01/2021</label>
            <div class="input-group mb-2">
              <div class="input-group-prepend">
                <div class="input-group-text">To</div>
              </div>
              <input type="text" class="form-control" id="inlineFormInputGroup" placeholder="07/01/2021">
            </div>
          </div>
          <button type="submit" class="btn btn-success btn-lg btn-block">Book</button>
        </form>
      </div>

      <div class="details-show">
        <h3>Details</h3>
        <div class="flex">
          <div class="flex">
            <i class="fas fa-users"></i>
            <%= @flat.number_of_guests %>
          </div>
          <div class="flex ml-3">
            <i class="fas fa-euro-sign"></i>
            <%= @flat.price_per_night %>
          </div>
        </div>
      </div>

      <div class="share">
        <div class="flex-align">
          <p class="flat-show-share">Share</p>
          <div class="flex links">
            <i class="fab fa-facebook-square link"></i>
            <i class="fab fa-twitter-square link"></i>
            <i class="fab fa-pinterest-square link"></i>
            <i class="fas fa-envelope-square link"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>




